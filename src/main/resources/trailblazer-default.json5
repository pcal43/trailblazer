//
// Configuration:
//
// The configuration file is a list of stanzas ('blocks'), each of which defines a rule for how
// and when one block type is transformed into another.  A given block may have more than one rule
// attached to it.  The first one listed gets precedence in the case where multiple rules match
// the same event.
//
// Fields:
//
//     name:
//         A name for the rule.  Mainly useful for debugging.  Optional.
//
//     blockId:
//         id of a block to track.  This is required.
//             Example: 'minecraft:gravel'
//
//     nextBlockId:
//        id of the block to change the block into.  This is required.
//             Example: 'minecraft:cobblestone'
//
//     stepCount:
//         The number of steps that must accumulate on a block before the block is changed to the 'next'.
//             Default: 0
//
//     timeoutTicks:
//         The maximum number of ticks that can elapse between steps in order for a step to
//         advance the stepCount counter.  1 tick = 0.05 seconds.  -1 means 'never timeout'
//         Ignored if stepCount is 0.
//             Default: 72000 (one hour)
//
//     entityIds:
//         List of EntityType ids for entities whose footsteps trigger the rule.
//             Example: [ 'minecraft:player', 'minecraft:villager', 'minecraft:zombie' ]
//             Default: [ 'minecraft:player' ]
//
//     spawnGroups:
//         List of SpawnGroup names for entities whose footsteps will trigger the rule.
//             Example: [ 'monster', 'creature', 'ambient' ]
//             Default: [ ]
//
//     skipIfBoots:
//         A List-of-lists of boot and/or enchantment ids.  If the player is wearing ALL of the boots
//         and/or boot enchantments in one of the sublists, the rule will NOT trigger.  Use this to allow
//         players to wear special boots that disable block changes.
//             Example: [  ['minecraft:leather_boots'], [ 'minecraft:golden_boots', 'minecraft:feather_falling'] ]
//             Default: [ ]
//
//     onlyIfBoots:
//         Just like skipIfBoots except the rule will trigger ONLY IF the player is wearing boots that
//         match one of the sublists.  Use this to have block changes that happen only when players are wearing
//         special boots.
//             Example: [ [ 'minecraft:diamond_boots', 'minecraft:frost_walker'], [ 'minecraft:netherite_boots', 'minecraft:frost_walker'],  ]
//             Default: [ ]
//
//
// Notes about boot rules:
// * A rule cannot specify both skipIfBoots and onlyIfBoots.
// * Use 'minecraft:none' to match players going barefoot.
// * Boot rules DO apply to mobs that can wear boots.
//

{
  'rules': [
    {
      'name'          : 'Grass to dirt (unless barefoot or boots with feather falling)',
      'blockId'       : 'minecraft:grass_block',
      'nextBlockId'   : 'minecraft:dirt',
      'entityIds'     : [ 'minecraft:zombie','minecraft:player' ],
      'skipIfBoots'   : [ [ 'minecraft:feather_falling' ], [ 'minecraft:none' ] ]
    },
    {
      'name'          : 'Dirt to coarse dirt',
      'blockId'       : 'minecraft:dirt',
      'nextBlockId'   : 'minecraft:coarse_dirt',
      'entityIds'     : [ 'minecraft:zombie', 'minecraft:player' ],
      'skipIfBoots'   : [ [ 'minecraft:feather_falling' ], [ 'minecraft:none' ] ],
      'stepCount'     : 3
    },
    {
      'name'          : 'Coarse dirt to dirt path',
      'blockId'       : 'minecraft:coarse_dirt',
      'entityIds'     : [ 'minecraft:zombie', 'minecraft:player' ],
      'nextBlockId'   : 'minecraft:dirt_path',
      'skipIfBoots'   : [ [ 'minecraft:feather_falling' ], [ 'minecraft:none' ] ],
      'stepCount'     : 3
    },
    {
      'name'           : 'Firewalker Boots',
      'blockId'        : 'minecraft:lava',
      'nextBlockId'    : 'minecraft:cobblestone',
      'onlyIfBoots'    : [ [ 'minecraft:netherite_boots' , 'minecraft:frost_walker', 'minecraft:fire_protection' ] ]
    }
  ]
}


